@using PL.Properties
@using BLL.Properties
@using System.Drawing
@model PL.Models.EventModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Meeting";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/game-stylesheet.css" />
}



<div class="menu">
    @if (Model.PlayerIsAlive)
    {
        <div class="frame1">
            @Html.Raw("<img src=\"data:image/jpeg;base64," + 
                       Convert.ToBase64String((byte[])new ImageConverter()
                      .ConvertTo(Model.Image, typeof(byte[]))) + "\" />")
        </div>
        <div class="frame2">
            @if (Model.ResultMeetingMessage != String.Empty)
            {
                <p>@Model.ResultMeetingMessage</p>
            }
            <p>@ScenarioTexts.WalkingMessage @Model.Name</p>
            <p>@Model.WelcomeWord</p>
            <p>Current budget: @Model.PlayerCurrentBudget</p>
            @if (Model.IsPub)
            {
                <p>Current beers: @Model.PlayerCurrentBeers</p>
            }
            @if (Model.IsEnteringFee)
            {
                <div id="choice">
                    <a class="accept" href="#">Accept</a>
                    @Html.ActionLink("Skip", "Skip", "Event")
                </div>
                <div id="enter-fee">
                    @using (Html.BeginForm("EnterFee", "Event"))
                    {
                        @Html.LabelFor(m => m.EnteredFee)
                        @Html.TextBoxFor(m => m.EnteredFee)
                        <button type="submit">Let's try</button>
                    }
                </div>
            }
            else
            {
            <div id="choice">
                @Html.ActionLink("Accept", "Accept", "Event")
                @Html.ActionLink("Skip", "Skip", "Event")
            </div>
            }

        </div>
    }
    else
    {
        <div class="frame1">
            @Html.Raw("<img src=\"data:image/jpeg;base64," + 
                       Convert.ToBase64String((byte[])new ImageConverter()
                      .ConvertTo(Images.Default, typeof(byte[]))) + "\" />")
        </div>
        <div class="frame2">
            <p>@Model.ResultMeetingMessage</p>
            <p>@Model.PlayerScore</p>
            @Html.ActionLink("Start new game", "Reset", "Event")
        </div>
    }
</div>

@section Scripts{
    <script>
         ﻿$(document).ready(function () {
            $('#enter-fee').hide();
            $('#choice .accept').on('click', function() {
              $('#choice').hide();
              $('#enter-fee').show();
            });
        });
    </script>
}

